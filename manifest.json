{
  "manifest_version": 2,
  "name": "Jira comment collapser",
  "description": "Collapse comments in Jira generated by bots.",
  "version": "0.2",
  "content_scripts": [
  {
    "matches": [
       "*://*/*"
    ],
    "js": ["jquery.js", "content.js"],
    "run_at": "document_end"
  }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [ "tabs", "http://*/*", "https://*/*", "contextMenus", "webRequest", "webRequestBlocking", "webNavigation", "storage", "unlimitedStorage", "notifications" ]
}
